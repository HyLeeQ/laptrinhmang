<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.MediaView?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.zalu.controller.media.VideoPlayerController"
      stylesheets="@/styles.css"
      styleClass="video-player-root"
      spacing="0"
      prefWidth="800"
      prefHeight="600">

    <!-- Header -->
    <HBox styleClass="video-player-header" alignment="CENTER_LEFT" spacing="12">
        <padding>
            <Insets top="16" right="20" bottom="16" left="20"/>
        </padding>
        <Label text="ðŸŽ¬" style="-fx-font-size: 20px;"/>
        <Label fx:id="fileNameLabel" text="Video Player" styleClass="video-player-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="âœ•" onAction="#handleClose" styleClass="close-btn" prefWidth="36" prefHeight="36"/>
    </HBox>

    <!-- Video Container -->
    <StackPane fx:id="videoContainer" styleClass="video-container" VBox.vgrow="ALWAYS">
        <MediaView fx:id="mediaView" preserveRatio="true" fitWidth="800" fitHeight="450"/>
    </StackPane>

    <!-- Controls -->
    <VBox styleClass="video-controls" spacing="12">
        <padding>
            <Insets top="16" right="20" bottom="16" left="20"/>
        </padding>

        <!-- Time Slider -->
        <HBox alignment="CENTER" spacing="12">
            <Label fx:id="currentTimeLabel" text="00:00" styleClass="time-label" minWidth="50"/>
            <Slider fx:id="timeSlider" HBox.hgrow="ALWAYS" min="0" max="100" value="0"/>
            <Label fx:id="totalTimeLabel" text="00:00" styleClass="time-label" minWidth="50"/>
        </HBox>

        <!-- Control Buttons -->
        <HBox alignment="CENTER" spacing="16">
            <!-- Play/Pause Button -->
            <Button fx:id="playPauseButton" text="â–¶" onAction="#handlePlayPause" 
                    styleClass="control-btn, play-btn" prefWidth="60" prefHeight="40"/>
            
            <!-- Stop Button -->
            <Button fx:id="stopButton" text="â¹" onAction="#handleStop" 
                    styleClass="control-btn" prefWidth="50" prefHeight="40"/>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Volume Control -->
            <HBox alignment="CENTER" spacing="8">
                <Label text="ðŸ”Š" style="-fx-font-size: 16px;"/>
                <Slider fx:id="volumeSlider" min="0" max="100" value="50" 
                        prefWidth="120" styleClass="volume-slider"/>
            </HBox>
        </HBox>
    </VBox>
</VBox>
