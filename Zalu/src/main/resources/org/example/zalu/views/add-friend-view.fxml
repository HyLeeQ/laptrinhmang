<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" spacing="20" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.zalu.controller.AddFriendController">
    <TextField fx:id="searchField" promptText="Tìm kiếm username hoặc email"/>
    <Button text="Tìm kiếm" onAction="#searchFriend"/>
    <ListView fx:id="friendList" prefHeight="200" prefWidth="300" onMouseClicked="#addFriend"/>
    <Button text="Quay về chính" onAction="#backToMain"/>
</VBox>