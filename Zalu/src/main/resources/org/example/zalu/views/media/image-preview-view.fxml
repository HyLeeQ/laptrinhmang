<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" spacing="15" styleClass="image-preview-root" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.zalu.controller.common.ImagePreviewController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Xem trước ảnh" styleClass="preview-title" />
      <ImageView fx:id="previewImageView" fitHeight="400.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true" />
      <Label fx:id="fileNameLabel" styleClass="preview-filename" />
      <Label fx:id="fileSizeLabel" styleClass="preview-filesize" />
      <HBox spacing="10" alignment="CENTER_RIGHT">
         <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" text="Hủy" styleClass="preview-button-cancel" />
         <Button fx:id="sendButton" mnemonicParsing="false" onAction="#handleSend" text="Gửi" styleClass="preview-button-send" />
      </HBox>
   </children>
</VBox>

