<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="center" spacing="20" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.zalu.controller.ProfileController">
    <Text text="Trang cá nhân" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <Text fx:id="usernameLabel" text="Username: "/>
    <Text fx:id="emailLabel" text="Email: "/>
    <Text fx:id="statusLabel" text="Status: "/>
    <TextField fx:id="newPasswordField" promptText="Đổi mật khẩu"/>
    <Button text="Cập nhật" onAction="#updateProfile" prefWidth="200"/>
</VBox>