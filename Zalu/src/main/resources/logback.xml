<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender - Log tất cả vào file -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/zalu.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Log file hàng ngày -->
            <fileNamePattern>logs/zalu.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Giữ log 30 ngày -->
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Error File Appender - Chỉ log ERROR -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/zalu-error.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/zalu-error.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Log levels cho từng package -->
    <!-- Server: INFO level -->
    <logger name="org.example.zalu.server" level="INFO"/>
    
    <!-- Client: INFO level -->
    <logger name="org.example.zalu.client" level="INFO"/>
    
    <!-- DAO: DEBUG level để debug database queries -->
    <logger name="org.example.zalu.dao" level="DEBUG"/>
    
    <!-- Service: DEBUG level -->
    <logger name="org.example.zalu.service" level="DEBUG"/>
    
    <!-- Controller: INFO level -->
    <logger name="org.example.zalu.controller" level="INFO"/>
    
    <!-- Database: WARN level (tránh log quá nhiều từ HikariCP) -->
    <logger name="com.zaxxer.hikari" level="WARN"/>
    <logger name="com.mysql.cj.jdbc" level="WARN"/>
    
    <!-- ========================================== -->
    <!-- UDP Discovery Logging Configuration       -->
    <!-- ========================================== -->
    
    <!-- Server Discovery Listener: Nhận và xử lý discovery requests -->
    <!-- Đổi thành DEBUG để xem chi tiết từng packet nhận/gửi -->
    <logger name="org.example.zalu.server.ServerDiscoveryListener" level="INFO"/>
    
    <!-- Client Discovery: Tìm kiếm server trong LAN -->
    <!-- Đổi thành DEBUG để xem chi tiết quá trình broadcast và network interfaces -->
    <logger name="org.example.zalu.client.ServerDiscoveryClient" level="INFO"/>
    
    <!-- Login Controller: Auto-discovery khi khởi động -->
    <!-- Đổi thành DEBUG để xem chi tiết quá trình auto-discovery -->
    <logger name="org.example.zalu.controller.auth.LoginController" level="INFO"/>
    
    <!-- ========================================== -->
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>
</configuration>

