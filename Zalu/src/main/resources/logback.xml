<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender - Log tất cả vào file -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/zalu.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Log file hàng ngày -->
            <fileNamePattern>logs/zalu.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Giữ log 30 ngày -->
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Error File Appender - Chỉ log ERROR -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/zalu-error.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/zalu-error.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Log levels cho từng package -->
    <!-- Server: INFO level -->
    <logger name="org.example.zalu.server" level="INFO"/>
    
    <!-- Client: INFO level -->
    <logger name="org.example.zalu.client" level="INFO"/>
    
    <!-- DAO: DEBUG level để debug database queries -->
    <logger name="org.example.zalu.dao" level="DEBUG"/>
    
    <!-- Service: DEBUG level -->
    <logger name="org.example.zalu.service" level="DEBUG"/>
    
    <!-- Controller: INFO level -->
    <logger name="org.example.zalu.controller" level="INFO"/>
    
    <!-- Database: WARN level (tránh log quá nhiều từ HikariCP) -->
    <logger name="com.zaxxer.hikari" level="WARN"/>
    <logger name="com.mysql.cj.jdbc" level="WARN"/>
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>
</configuration>

